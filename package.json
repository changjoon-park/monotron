{
  "name": "electron-python-monorepo",
  "version": "1.1.0",
  "description": "",
  "scripts": {
    "venv": "pnpm --filter='python' create:venv && echo 'Run `source ./apps/python/.venv/bin/activate` to activate the virtual environment.'",
    "install:all": "pnpm install && pnpm --filter='my-electron*' install:all && pnpm --filter='python' install:python",
    "start:python": "pnpm --filter='python' start",
    "start:electron": "pnpm --filter='my-electron*' start",
    "start": "concurrently -k \"npm run start:python\" \"npm run start:electron\"",
    "build": "pnpm --filter='python' bundle:python && pnpm --filter='my-electron*' package"
  },
  "keywords": [
    "electron",
    "python",
    "monorepo",
    "boilerplate"
  ],
  "author": {
    "name": "Changjoon",
    "email": "sisyphus9402@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/changjoon-park/electron-python.git"
  },
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  }
}
